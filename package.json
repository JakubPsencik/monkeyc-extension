{
	"name": "monkeyc-extension",
	"displayName": "monkeyc-extension",
	"description": "Syntactic analysis of code written in MonkeyC",
	"publisher": "JakubPsencik",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:monkeyc-extension.helloWorld",
		"onCommand:monkeyc-extension.testFunc",
		"onCommand:monkeyc-extension.ScanCode"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "monkeyc-extension.helloWorld",
				"title": "Hello World"
			},

			{
				"command": "monkeyc-extension.testFunc",
				"title": "Run test"
			},

			{
				"command": "monkeyc-extension.ScanCode",
				"title": "Scan code"
			},

			{
				"command": "monkeyc-extension.createDiagnostic",
				"title": "createDiagnostic"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/monkeyc-extension/runTest.js",
		"antlr4ts": "antlr4ts -visitor src/MonkeyC.g4"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"antlr4ts-cli": "^0.5.0-alpha.3",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"antlr4ts": "^0.5.0-alpha.3"
	}
}
