{
	"name": "monkeyc-extension",
	"displayName": "monkeyc-extension",
	"description": "Syntactic analysis of code written in MonkeyC",
	"publisher": "JakubPsencik",
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:monkeyc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [

		],
		"languages": [
			{
				"id": "monkeyc",
				"aliases": [
					"Monkey C",
					"monkeyc",
					"monkeyC",
					"garmin",
					"Connect IQ",
					"connect iq",
					"connectiq"
				],
				"extensions": [
					".mc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "monkeyc",
				"scopeName": "source.mc",
				"path": "./syntaxes/monkeyc.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/monkeyc-extension/runTest.js",
		"antlr4ts": "antlr4ts -listener src/MonkeyC.g4"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.25",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"antlr4ts-cli": "^0.5.0-alpha.3",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"antlr4-c3": "^1.1.12",
		"antlr4ts": "^0.5.0-alpha.3",
		"clang-format": "^1.4.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/JakubPsencik/monkeyc-extension.git"
	},
	"capabilities" : {
        "completionProvider" : {
            "resolveProvider": "true",
            "triggerCharacters": [ ".", "$" ]
		}
	}
}
